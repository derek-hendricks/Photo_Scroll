<div class="page-header">
  <h1>My posts</h1>
</div>

<div id="static-pagination">
  <%= will_paginate %>
</div>

<div id="my-posts">
  <div class="page-delimiter first-page" data-page="<%= params[:page] || 1 %>"></div>
  <%= render @messages %>
</div>

<% if @messages.next_page %>
    <div id="with-button">
      <%= will_paginate %>
    </div>

    <div id="load_more_posts" class="btn btn-primary btn-lg">More posts</div>
<% end %>