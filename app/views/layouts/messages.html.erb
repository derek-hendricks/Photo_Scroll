<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:title)) %></title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>

  <%= csrf_meta_tags %>
  <%= render 'layouts/shim' %>
</head>
<body>
	<%= render 'layouts/header' %>
	<div class="container">

	<div class='row'>
		<% if @the_message then %>
			<%= render 'form' %>
		<% end %>
		<div class="col-md-4">
			<div class='row'>
				<div class="col-md-4 text-center"><strong>Messages</strong></div>
			</div>
			<div class='row'>
				<div class="col-md-1"><%= link_to_unless_current "All", :controller => "messages", :action => "index" %></div>
				<div class="col-md-2"><%= link_to_unless_current "Followed", :controller => "messages", :action => "streams", :stream => "followed" %></div>
				<div class="col-md-1">
					<% unless params[:author] %>
						<%= link_to_unless_current "Favourites", :controller => "messages", :action => "streams", :stream => "favourites" %>
					<% end %>
				</div>
			</div>
  	</div>
	</div>
	<%= yield %>
	<%= render 'layouts/footer' %>
</div>
</body>
</html>
