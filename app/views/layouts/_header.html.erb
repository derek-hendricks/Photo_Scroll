<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "Photo Scroll", messages_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav pull-right">
        <% if current_user %>
          <li><%= image_tag current_user.avatar_url %></li>
          <li><%= link_to 'Sign out', sign_out_path %></li>
        <% end %>
        <% if logged_in? %>

          <li><%= link_to current_author.username, author_path(current_author) %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Site <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to 'Chat', new_comment_path %></li>
              <li><%= link_to "Messages", messages_path %></li>
              <li><%= link_to "Authors", authors_path %></li>
              <li><%= link_to "Settings", edit_author_path(current_author) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log in", login_path %></li>
          <li><%= link_to "Sign up", signup_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>