<h1>
  <%= conversation.subject %>
</h1>
<ul>
  <%= content_tag_for(:li, conversation.receipts_for(current_author)) do |receipt| %>
    <% message = receipt.message %>
    <h3>
      <%= message.subject %>
    </h3>
    <p>
      <%= message.body %>
    </p>
  <% end %>
</ul>
<%= render 'messages_form', conversation: conversation %>