<% (defined? @author) ? email = @author.email : new = "New Recipient" %>
<%= simple_form_for :conversation, url: :conversations do |f| %>
  <%= f.input :recipients, input_html: {value: email, placeholder: new} %>
  <%= f.input :subject %>
  <%= f.input :body, as: :text %>
  <div class="form-actions">
    <%= f.button :submit, class: 'btn-primary' %>
    <%= f.button :submit, 'Cancel', type: :reset, class: 'btn-danger' %>
  </div>
<% end %>