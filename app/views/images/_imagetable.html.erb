<table>
  <thead>
    <tr>
      <th>Caption</th>
      <th>Description</th>
      <th>Url</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% images.each do |image| %>
      <tr>
        <td><%= image.caption %></td>
        <td>
          <%= link_to image do %>
            <img src="<%= image.url %>" width="150"/>
            <br/>
            <%= truncate image.description, :length=>40%>
          <% end %>
        </td>
        <td><%= image.rating %></td>
        <td><%= link_to 'Show', image %></td>
        <td><%= link_to 'Edit', edit_image_path(image) %></td>
        <td><%= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>